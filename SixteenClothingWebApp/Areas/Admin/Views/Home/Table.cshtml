﻿@using SixteenClothingWebApp.Models

@{
    int count = 0;
}










<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Striped Table</h4>
                <p class="card-description">
                    Add class <code>.table-striped</code>
                </p>
                <a asp-controller="home" asp-action="create" class="btn btn-success">Add Product</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Product Count
                                </th>

                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>









                            @foreach (Product product in Model)
                            {
                                count++;
                                <tr>
                                    <td class="py-1">
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/assets/images/@product.ImagePath" alt="" />
                                    </td>
                                    <td>
                                        @product.Title
                                    </td>

                                    <td>
                                        <a asp-action="edit" asp-route-id="@product.Id" class="btn btn-warning"><i class="mdi mdi-lead-pencil"></i></a>
                                        <a asp-action="delete" asp-route-id="@product.Id" class=" btn btn-danger">

                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                        <a asp-action="detail" asp-route-id="@product.Id" class="btn btn-primary"><i class="mdi mdi-dots-vertical"></i></a>
                                    </td>
                                </tr>
                            }









                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>